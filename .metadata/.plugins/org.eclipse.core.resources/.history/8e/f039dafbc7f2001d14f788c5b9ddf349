<script type="text/javascript">
window.onload = () => {
	document.getElementById('btn').onclick = () => {
		const strDong = document.getElementById('dong').value.trim();
		
		if(strDong.length < 2) {
			if(strDong == '') {
				alert('비정상');
			} else {
				alert('정상');
			}
		}
	};
};
</script>
